@model List<Departamento>
<h1>Lista departamentos</h1>
<br />
@if (ViewData["dept"] != null)
{
    <table class="table table-bordered table-primary">
        <thead>
            <tr>
                <th>Número</th>
                <th>Nombre</th>
                <th>Localidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dep in (ViewData["dept"] as IEnumerable<Departamento>))
            {
                <tr>
                    <th>@dep.IdDepartamento</th>
                    <th>@dep.Nombre</th>
                    <th>@dep.Localidad</th>
                    <th>
                        @Html.ActionLink("Editar", "Edit", "Home", new { iddept = dep.IdDepartamento }) |
                        @Html.ActionLink("Detalles", "Details", "Home", new { iddept = dep.IdDepartamento }) |
                        @Html.ActionLink("Borrar", "Delete", "Home", new { iddept = dep.IdDepartamento })
                    </th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <form method="post">
        <input type="text" name="nombre" class="form-control" placeholder="Nombre de departamento" />
        <button type="submit" class="btn btn-dark">Buscar</button>
    </form>
    <br />
    <a asp-controller="Home" asp-action="Create" style="color: blue">Crear nuevo</a>
    <br />

    <table class="table table-bordered table-primary">
        <thead>
            <tr>
                <th>Número</th>
                <th>Nombre</th>
                <th>Localidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Departamento dep in Model)
            {
                <tr>
                    <th>@dep.IdDepartamento</th>
                    <th>@dep.Nombre</th>
                    <th>@dep.Localidad</th>
                    <th>
                        @Html.ActionLink("Editar", "Edit", "Home", new { iddept = dep.IdDepartamento }) |
                        @Html.ActionLink("Detalles", "Details", "Home", new { iddept = dep.IdDepartamento }) |
                        @Html.ActionLink("Borrar", "Delete", "Home", new { iddept = dep.IdDepartamento })
                    </th>
                </tr>
            }
        </tbody>
    </table>
}